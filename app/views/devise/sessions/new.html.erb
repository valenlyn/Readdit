</div>

<div class="col-4" style="padding-top: 90px;">

	<div style="background-color: rgb(255, 233, 195); border-radius: 20px; padding: 25px">

		<h1 class="text-center">Log In to Your Account</h1>
		<p class="text-center">Welcome to Readdit. Login to Continue</p>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			<div class="field">
		    <%= f.text_field :login, autofocus: true, placeholder: "Email or Username", :class => "form-control" %>
		  </div> <br>

		  <div class="field">
		    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => "form-control" %>
		  </div> <br>

		  <% if devise_mapping.rememberable? %>
		    <div class="field text-left">
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me %>
		    </div>
		  <% end %>

		  <div class="actions">
		    <%= f.submit "Log In", :class => "btn btn-warning btn-lg btn-block" %>
		  </div> <br>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>