<table>
	<thead>
		<tr>
			<th colspan="3">Book Image</th>
			<th>Title</th>
			<th>Author</th>
			<th>Status</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><img src=<%= book.image_url %> alt=<%= book.title %>></td>
				<td><a href=<%=book_path(book)%> ><%= book.title %></a></td>
				<td><%= book.author %></td>
				<td><%= render partial: 'bookstatuses/hi' , locals: { helpme: book } %></td>
			</tr>
		<% end %>

	</tbody>
	<%= will_paginate @books %>
</table>