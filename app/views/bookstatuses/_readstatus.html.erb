<%= form_with(scope: :bookstatus, url: bookstatuses_path, local: true) do |form| %>

	<select name="bookstatus[read_status]" class="dropdown">
		<option style="display:none">Have you read this?</option>
	  <option value="1">Want to read</option>
	  <option value="2">Currently reading</option>
	  <option value="3">Read</option>
	</select>

	<%= form.hidden_field :user_id, value: current_user.id %>

	<%= form.hidden_field :book_id, value: object.id %>


<% end %>